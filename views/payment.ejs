<body id="entrypage">

    <nav class="navbar sticky-top shadow p-2 mb-2">
        <a class="navbar-brand" href="/user/<%=user_id%>"><i class="fas fa-arrow-circle-left"></i></a>
       
      </nav>

    <div class="container">
        <%- include('./partials/messages.ejs') %>
    </div>
    

    
  <form method="post" >
    <div class="row">
      <div class="col">
        <h4 class="det" >ENTER THE DETAILS</h4>
        <label for="fname" class="tle">Name : </label>
        <br>
        <input name="firstname" type="text" id="fname" placeholder="John M. Doe" required/>
        <br>
        <br>
        <label for="email" class="tle">Email:</label>
        <br>
        <input name="email" type="email" id="email" placeholder="john@example.com" required/>
        <br>
        <br>
        <label for="cno" class="tle">Credit Card Number :</label>
        <br>
        <input name="cno" type="text" id="cnumber" placeholder="1111-2222-3333-4444" required/>
        <br>
        <br> 
      </div>
      
      <div class="col clm1">
        <label for="expiry" class="tle">Expiry :</label>
        <br>
        <input name="expiry" type="text" id="exp" placeholder="04/22" required/>
        <br>
        <br> 
        <br>
        <label for="CVV" class="tle">CVV :</label>
        <br>
        <input name="CVV" type="text" id="CVV" placeholder="345" required/>
        <br>
        <br> 
        <input type="submit" id="submit" value="Confirm Payment" />
        <br>
        <br> 
      </div>
      <div class="col-5">
        <div class="rect"><img src="/css/img/pay.png" class="bimg"></div>
        </div>
      </div>
    </div>
    <br>
  </form>
  <div class="billbox">
    <h4 class="det" id="bill">&nbsp;&nbsp;Your Bill:</h4>
    <p class="info">&nbsp;&nbsp;Your booked slot number: <%=slotno%></p>
    <p class="info">&nbsp;&nbsp;Amount Payable: <%=price%></p>
    <p class="info">&nbsp;&nbsp;Please finish your payment process!!</p>
    <br>
    <br>
  </div>

</body>
    
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $('form').on('submit',(e)=>{
        e.preventDefault;
        
        const email=$('#email').val().trim();
        const fname=$('#fname').val().trim();

        const data={
          email,
          fname
        };

        $.post('/user/:id/:p_id/payment',data,function(){
          console.log('Server recieved our data');
        });
    });
</script>

