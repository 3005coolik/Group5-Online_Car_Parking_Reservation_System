<div class="login-box">
  
     <div id="bigLeftBox">
         <h2 style="color:#fff; font-size: 60px; margin:50px 50px; font-weight: 500; text-shadow: 2px 2px 4px #000000;"> Welcome to 
             <br> PyP: Plan your Park
         </h2>
    </div>

    <div id="bigRightBox">
      <div class="loginbox">
        <h1>Login Into your Account</h1>
		<form action="/user/login" method="post" id="login">
			<label for="email" class="inp">Email</label><br>
			<input
				type="email"
				id="email"
				name="email"
				placeholder="Enter Email"
				required
			/>
			<label for="password" class="inp">Password</label>
			<input
				type="password"
				id="password"
				name="password"
				placeholder="Create Password"
				required
			/>
			<label for="category" class="inp">Category</label>
			<select name="role" id="category" onchange="changeaction()">
				<option value="user" class="l1">User</option>
				<option value="owner" class="l1">Parking Owner</option>
			</select>
			
			<p style="color:black; font-weight: 400; margin-top: 10px">New user?  
          <a class="al1" style="color:white;" href="/register">Signup here</a></p>
          <input type="submit" value="Login"/>  
        </form>
        </div>
        
    </div>
	                </div>
	</body>
</html>

<script>
	function changeaction() {
		const category = document.getElementById("category").value;
		document.getElementById("login").action = "/" + category + "/login";
	}
</script>